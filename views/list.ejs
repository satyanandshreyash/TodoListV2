<%- include("header") -%>
    <div class="abt">
        <a href="/about">About / How to use</a>
    </div>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">
        <% newListItems.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>
        <% }) %>

        <form action="/" method="post" class="item">
            <input type="text" name="newItem" placeholder="Type & Add New Item" autocomplete="off">
            <button class="add-btn" type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    </div>
<%- include("footer") -%>    
    

